<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imgSail"
        android:layout_width="201dp"
        android:layout_height="513dp"
        android:contentDescription="@string/imgSail"
        android:src="@drawable/teaching" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="654dp" >

        <TableRow>
            <View android:layout_height="60dp" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:background="#00897B"
                android:gravity="center_horizontal"
                android:padding="50dp"
                android:text="@string/txtTitle"
                android:textColor="#303030"
                android:textSize="60sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </TableRow>
        <TableRow>
            <View android:layout_height="40dp" />

            <Button
                android:id="@+id/btnDate"
                android:layout_width="wrap_content"
                android:background="#FFB300"

                android:gravity="center_horizontal"
                android:text="@string/btnDate"
                android:textColor="#FFFFFF"
                android:textSize="42sp"
                android:typeface="serif" />

        </TableRow>

        <TableRow>
            <View android:layout_height="60dp" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:padding="20dp"
                android:text="@string/txtDescription"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="italic"
                android:typeface="serif" />
        </TableRow>


        <TableRow>
            <View android:layout_height="60dp" />

            <TextView
                android:id="@+id/txtReservation"
                android:layout_gravity="center"
                android:padding="20dp"
                android:textColor="#00897B"
                android:textSize="35sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>
